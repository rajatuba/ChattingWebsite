<header>
    <h2>
        <a href="/">Chatting Site</a>
    </h2>
    <ul id="header-element">
        <% if(locals.user){ %>
            <li>
                <a href="/users/profile/<%= user.id %>">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">
                    Sign Out
                </a>
            </li>
        <% }else{ %>
            <li>
                <a href="/users/sign-up">Sign-Up</a>
            </li>
            <li>
                <a href="/users/sign-in">Sign-In</a>
            </li>
        <% } %>
    </ul>
</header>