<html>
    <head>
        <title>
            <%= title %>
        </title>

        <!--Noty-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">

        <!--For extraction of styles-->
        <%- style %>
    </head>

    <body>
        <!--Including header-->
        <%- include('_header'); %>

        <!-- flash messages
        <% if(flash.success && flash.success.length>0){%>
            <h5>
                <%= flash.success %>
            </h5>
        <%}%> -->

        <main id="layout-main">
            <!--Variable part-->
            <%- body %>
        </main>

        <!-- including footer-->
        <%- include('_footer'); %>

        <!-- For extraction of scripts-->
        <%- script %>

        <!--Setting up Noty-->
        <script>
            <% if(flash.success && flash.success.length>0){%>
                new Noty({
                    theme:'relax',
                    text:'<%= flash.success %>',
                    type:'success',
                    layout:'topRight',
                    timeout:1500
                }).show();
            <%}%>
            <% if(flash.error && flash.error.length>0){%>
                new Noty({
                    theme:'relax',
                    text:'<%= flash.error%>',
                    type:'error',
                    layout:'topRight',
                    timeout:1500
                }).show();
            <%}%>
        </script>
    </body>
</html>